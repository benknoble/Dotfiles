# vim: noet:sw=8:sts=8
[alias]
	cd = checkout
	stat = status
	ls = branch --list
	cc = commit
	cm = commit -m
	sdiff = !git diff && git submodule foreach 'git diff'
	spush = push --recurse-submodules=on-demand
	supdate = submodule update --remote --checkout
	unstage = reset HEAD --
	last = log -1 HEAD
	visual = !gitk --all &
[merge]
	tool = vimdiff
	conflictstyle = diff3
[color]
	ui = true
[core]
	excludesfile = ~/.gitignore_global
[diff]
	submodule = log
	tool = vimdiff
[status]
	submodulesummary = 1
[push]
	recurseSubmodules = check
[user]
	name = David Ben Knoble
	email = ben.knoble@gmail.com
[commit]
	verbose = true
[difftool]
	prompt = no
[mergetool]
	prompt = no
[gitsh "color"]
	default = cyan
[gitsh]
	prompt = "%D (%c%b %#%w) git>"
	noGreeting = true
	defaultCommand = status -sb
