# vim: noet:sw=8:sts=8
[alias]
	amend = commit --amend
	cc = commit
	cd = checkout
	cm = commit -m
	last = log -1 HEAD
	graph = log --graph --oneline
	graph-long = log -- graph
	ls = branch --list
	sdiff = !git diff && git submodule foreach 'git diff'
	spush = push --recurse-submodules=on-demand
	stat = status
	supdate = submodule update --remote --checkout
	unstage = reset HEAD --
	visual = !gitk --all &
[merge]
	tool = fugitive
	conflictstyle = diff3
[color]
	ui = always
[core]
	excludesfile = ~/.gitignore_global
[diff]
	submodule = log
	tool = vimdiff
[status]
	submodulesummary = 1
[push]
	recurseSubmodules = check
[user]
	name = David Ben Knoble
	email = ben.knoble@gmail.com
[commit]
	verbose = true
[difftool]
	prompt = no
[mergetool]
	prompt = no
[gitsh "color"]
	default = cyan
[gitsh]
	prompt = "%D (%c%b %#%w) git>"
	noGreeting = true
	defaultCommand = status -sb && :echo
[mergetool "fugitive"]
	cmd = vim --nofork -c \"Gvdiff\" \"$MERGED\"
	trustExitCode = true
[fetch]
	recurseSubmodules = on-demand
