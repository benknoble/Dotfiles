###
# delim : %
# output : makefile
# help : my common makefile for tex projects
# vim: ft=make
###
SHELL = /bin/sh

.SUFFIXES:
.SUFFIXES: .pdf .tex

LATEX = lualatex
BIBTEX = biber
LATEXFLAGS = -halt-on-error

.tex.pdf:
	$(LATEX) $(LATEXFLAGS) $*
	$(BIBTEX) $(BIBTEXFLAGS) $*
	$(LATEX) $(LATEXFLAGS) $*
	$(LATEX) $(LATEXFLAGS) $*

clean:
	git clean -fdx -e '*.sw*' -e '*.vim'
