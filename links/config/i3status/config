general {
	colors = true
	interval = 1
	markup = pango
	color_good = "#8AFF80"
	color_degraded = "#FFFF80"
	color_bad = "#FF9580"
}

order += "ipv6"
order += "wireless _first_"
order += "ethernet _first_"
order += "battery trackpad"
order += "disk /"
order += "load"
order += "memory"
order += "tztime local"
order += "volume main"

wireless _first_ {
	format_up = "W: (%quality at %essid) %ip"
	format_down = "W: down"
}

ethernet _first_ {
	format_up = "E: %ip (%speed)"
	format_down = "E: down"
}

battery trackpad {
	format = "â–  tp %status %percentage"
	format_percentage = "%.00f%s"
	status_bat = "ðŸ”‹"
	status_chr = "âš¡"
	status_full = "â˜» "
	path = "/sys/class/power_supply/hid-08:65:18:b7:d1:f8-battery/uevent"
}

disk "/" {
	format = "%avail"
}

load {
	format = "%1min"
}

memory {
	format = "%used/%available"
	threshold_degraded = "1G"
	format_degraded = "MEMORY < %available"
}

tztime local {
	format = "<span size='x-large'>%Y-%m-%d %H:%M:%S</span>"
}

volume main {
	device = "pulse"
}
