# vim: noet:sw=8:sts=8
[alias]
	amend = commit --amend
	b = branch
	bd = branch --delete
	bdf = branch --delete --force
	ca = commit --all
	cc = commit
	ce = config --edit
	changed = diff --name-only
	cm = commit --message
	co = checkout
	conflict = log --oneline --left-right --merge
	cp = cherry-pick
	ctags = !.git/hooks/ctags
	d = diff
	ds = diff --stat
	g = !exec git
	git = !exec git
	grall = !git graph --all
	graph = !git graph-long --oneline
	graph-long = log --graph
	h = help
	ig = check-ignore
	igv = !git ig --verbose
	intend = add --intent-to-add
	last = log -1 HEAD
	logp = log --graph --abbrev-commit --pretty=mine
	logpall = !git logp --all
	lol = log --oneline
	merc = merge --no-ff
	name-when-merged = "!f() { git when-merged -c \"$@\" | git name-rev --stdin;}; f"
	newb = checkout -b
	patch = add --patch
	r = rebase
	rems = for-each-ref --sort=-committerdate --format=\"%(refname:short)\t%(color:red)%(authorname)\t%(color:blue)%(authordate:relative)%(color:reset)\" refs/remotes
	ri = rebase --interactive
	riu = rebase --interactive HEAD@{upstream}
	s = status --short
	sb = show-branch
	sbu = !git sb HEAD HEAD@{upstream}
	sdiff = !git diff && git submodule foreach 'git diff'
	spush = push --recurse-submodules=on-demand
	sr = status --short --branch
	standup = !git log --author=$USER --since=yesterday --all --format=%s
	stat = status
	supdate = submodule update --remote --checkout
	tags = tag --list
	tagss = "!f() { git tags \"$@\" | xargs git show; }; f"
	unstage = reset HEAD --
	visual = !gitk --all &
[merge]
	tool = fugitive
	conflictstyle = diff3
	log = true
[core]
	excludesfile = ~/.gitignore_global
	pager = less -FRX
[diff]
	submodule = log
	tool = vimdiff
	colorMoved = default
	mnemonicprefix = true
[status]
	submodulesummary = 1
	showstash = true
[push]
	recurseSubmodules = check
[include]
	path = ~/.gitconfig.local
[difftool]
	prompt = no
[mergetool]
	prompt = no
	keepBackup = false
[gitsh "color"]
	default = cyan
[gitsh]
	prompt = "%D (%c%b %#%w) %G>"
	noGreeting = true
	defaultCommand = status -s
[mergetool "fugitive"]
	cmd = vim --nofork +\"Git mergetool\"
	trustExitCode = true
[fetch]
	recurseSubmodules = on-demand
	prune = true
[rerere]
	enabled = true
[rebase]
	autoSquash = true
[init]
	templateDir = ~/.git_template
[advice]
	waitingForEditor = false
[pretty]
	mine = %C(yellow)%h%Creset%C(bold green)%d%Creset %s %C(magenta)(%cr)%Creset %C(ul bold cyan)<%an>%Creset
[sendemail]
	multiedit = true
	annotate = true
	confirm = auto
[user]
	useConfigOnly = true
[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true
[grep]
	lineNumber = true
	column = true
[submodule]
	fetchJobs = 4
